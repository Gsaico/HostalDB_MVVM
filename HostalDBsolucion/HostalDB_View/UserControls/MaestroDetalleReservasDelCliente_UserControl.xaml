<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="HostalDB_View.UserControls.MaestroDetalleReservasDelCliente_UserControl"
    xmlns:vm="clr-namespace:HostalDB_ViewModel.ViewModels;assembly=HostalDB_ViewModel" 
    mc:Ignorable="d"
    d:DesignHeight="750" d:DesignWidth="1000">
    <UserControl.Resources>
        <vm:MaestroDetalleReservasDelCliente_VM x:Key="MaestroDetalleReservasDelCliente_VM" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White" DataContext="{Binding Source={StaticResource MaestroDetalleReservasDelCliente_VM}}">
        <TextBox x:Name="txtParametroIDuser" Text="{Binding ParametroBusquedaIDUsuario,Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="88,31,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="97"/>

        <sdk:Label  Content="ID User:" HorizontalAlignment="Left" Height="23" Margin="24,31,0,0" VerticalAlignment="Top" Width="59"/>
        <Button x:Name="btnBuscarReservasDelCliente" Command= "{Binding BuscarUsuarioPorIDCommand}" Content="Buscar" HorizontalAlignment="Left" Margin="190,31,0,0" VerticalAlignment="Top" Width="75"/>
        <sdk:Label Content="DNI :" HorizontalAlignment="Left" Height="18" Margin="47,80,0,0" VerticalAlignment="Top" Width="36"/>
        <sdk:Label Content="Nombres :" HorizontalAlignment="Left" Height="18" Margin="24,107,0,0" VerticalAlignment="Top" Width="59"/>
        <sdk:Label Content="Apellidos :" HorizontalAlignment="Left" Height="18" Margin="24,131,0,0" VerticalAlignment="Top" Width="59"/>
        <TextBox x:Name="txtDNI" Text="{Binding ItemUsuario.dni, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="88,75,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="263"/>
        <TextBox x:Name="txtNombres" Text="{Binding ItemUsuario.nombre, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="88,103,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="263"/>
        <TextBox x:Name="txtApellidos" Text="{Binding ItemUsuario.apellidos, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="88,131,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="263"/>

    </Grid>
</UserControl>
